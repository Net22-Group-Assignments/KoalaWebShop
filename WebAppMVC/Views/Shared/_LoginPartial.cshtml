@using Microsoft.AspNetCore.Identity
@inject SignInManager<KoalaCustomer> SignInManager
@inject UserManager<KoalaCustomer> UserManager

<div class="navbar-item">
    <div class="buttons">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="button is-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <strong>Hello @User.Identity?.Name!</strong>
            </a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    <strong>Logout</strong>
                </button>
            </form>
        }
        else
        {
            <a class="button is-info is-light" asp-area="Identity" asp-page="/Account/Register">Register</a>

            <a class="button is-info is-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        }
    </div>
</div>